doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  meta(http-equiv='X-UA-Compatible', content='ie=edge')
  title Trang chủ
  link(rel='stylesheet', type='text/css', href='/stylesheets/font-awesome.min.css')
  link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
  link(rel='stylesheet', href='/stylesheets/hamburgers.min.css')
  link(rel='stylesheet', href='/stylesheets/main.css')
body
  header
    // Header desktop
    #wrap_header
      // Logo
      .logo
        a(href='index.html')
          img(alt='logo', src='/images/logobookstore.png')
      // Menu
      .main_nav
        nav.menu
          ul.main_menu
            li
              a(href='#') Trang chủ
            li
              a(href='#') Danh sách sản phẩm
              ul.sub_menu
                li
                  a(href='#') Sách thiếu nhi
                li
                  a(href='#') Sách đời sống
                li
                  a(href='#') Sách doanh nhân
                li
                  a(href='#') Khác
            li
              a(href='#') Về chúng tôi
            li
              a(href='#') Liên hệ
            // Cart
            li#shopping-cart
              a(href='#')
                img(alt='logo', src='/images/icons/shopping-bag.svg')
              if countPro
                span.count-pro
              ul.sub_menu.bg-light.border.rounded-bottom(style='border-color: #C8BCA7; width: 300px;')
                li
                  .list-product
                li
                  .btn.btn-danger(style='margin:0 auto;') Check out
    // Header Mobile
    #wrap_header_mobile
      // Logo moblie
      .logo-mobile
        a(href='index.html')
          img(alt='logo-deli', src='/images/logobookstore.png')
      // Button show menu
      .btn-show-menu
        button.btn-show-menu-mobile.hamburger.hamburger--squeeze(type='button')
          span.hamburger-box
            span.hamburger-inner
        if countPro
          span.count-pro
    // Menu Mobile
    .wrap-side-menu
      nav.side-menu
        ul.main-menu
          li
            a(href='#') Trang chủ
          li
            a(href='#') Danh sách sản phẩm
            i.arrow-main-menu.fa.fa-angle-right(aria-hidden='true')
            ul.sub-menu
              li
                a(href='#') Sách thiếu nhi
              li
                a(href='#') Sách đời sống
              li
                a(href='#') Sách doanh nhân
              li
                a(href='#') Khác
          li
            a(href='#') Về chúng tôi
          li
            a(href='#') Liên hệ
          li
            a(href='#') Check out
            if countPro
              span.count-pro(style='width: 10px; height:10px; border-radius:50%; background-color:red; display: inline-block;')
  // Body Content
  block body-content

  // Footer
  footer
    .container
      .content-footer.row
        .column-footer.col-lg-5.col-md-8.col-sm-7
          h3 Thông tin liên hệ
          ul
            li Địa chỉ: Hà Nội, Việt Nam
            li Hotline: (011) 123 456
            li#follow-us
              | Theo dõi chúng tôi: 
              a(href='#')
                i.fa.fa-facebook(aria-hidden='true')
              a(href='#')
                i.fa.fa-twitter(aria-hidden='true')
              a(href='#')
                i.fa.fa-tripadvisor(aria-hidden='true')
              a(href='#')
                i.fa.fa-instagram(aria-hidden='true')
        .column-footer.col-lg-4.col-md-5.col-sm-7
          h3 The Bookstore
          ul#restaurant-hours
            li
              span.span-left SÁNG:
            li
              span.span-left Thứ 2 - Thứ 6
              span.span-right 07:30AM - 12:00PM
            li
              span.span-left CHIỀU:
            li
              span.span-left Thứ 2 - Thứ 6
              span.span-right 13:30PM - 07:00PM
            li
              span.span-left Thứ 7 - Chủ nhật
              span.span-right 7:00AM - 14:00PM
          .line-divide.first-line
        .column-footer.col-lg-3.col-md-3.col-sm-7
          h3 Links
          ul#useful-links
            li
              span.span-left
                a(href='index.html') Trang chủ
            li
              span.span-left
                a(href='#') Danh sách sản phầm
            li
              span.span-left
                a(href='#') Liên hệ
            li
              span.span-left
                a(href='#') Về chúng tôi
          .line-divide.second-line
    .wrap-bottom-footer
      .container
        .bottom-footer.row.justify-content-between
          .col-12.col-sm-7 © 2019 by LaiHuan-Coders.tokyo.
          .col-12.col-sm-5
            span Privacy policy
            span Terms of use

  script(src='/javascripts/jquery-3.2.1.min.js')
  script(src='/javascripts/bootstrap.min.js')
  script(src='/javascripts/main.js')
